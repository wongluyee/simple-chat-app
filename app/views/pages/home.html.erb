<div class="container d-flex justify-content-center align-items-center vh-100">
  <% if user_signed_in? %>
    <div class="d-flex flex-column">
      <h3 class="text-center">Welcome <%= current_user.nickname %></h3>
      <div>
        <%= link_to "Go to chatroom", chatroom_path(@chatroom), class: "btn btn-primary" %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-primary" %>
      </div>
    </div>
  <% else %>
    <div class="d-flex flex-column">
      <h3>Login to chat app</h3>
      <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
